{
  "name": "all-nvm",
  "version": "1.0.0",
  "description": "Installs the same package globally in all versions of Node managed by NVM",
  "main": "index.js",
  "bin": {
    "all-nvm": "bin/all-nvm.js",
    "allnvm": "bin/all-nvm.js",
    "nvmall": "bin/all-nvm.js",
    "nvm-all": "bin/all-nvm.js",
    "all": "bin/all-nvm.js"
  },
  "scripts": {
    "test": "npm run lint",
    "lint": "standard --verbose *.js bin/*.js src/*.js",
    "commit": "commit-wizard",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bahmutov/all-nvm.git"
  },
  "keywords": [
    "nvm",
    "node",
    "versions",
    "install",
    "tool",
    "global",
    "utility",
    "cli"
  ],
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bahmutov/all-nvm/issues"
  },
  "homepage": "https://github.com/bahmutov/all-nvm#readme",
  "dependencies": {
    "check-more-types": "2.10.0",
    "cross-spawn-async": "2.1.8",
    "debug": "2.2.0",
    "lazy-ass": "1.3.0",
    "simple-bin-help": "1.6.0"
  },
  "devDependencies": {
    "mocha": "2.4.5",
    "pre-git": "^3.3.0",
    "standard": "^6.0.4"
  },
  "config": {
    "pre-git": {
      "commit-msg": [
        "simple"
      ],
      "pre-commit": [
        "npm run lint",
        "npm test"
      ],
      "pre-push": [
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  }
}
